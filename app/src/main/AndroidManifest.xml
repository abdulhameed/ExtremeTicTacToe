<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.completetictactoe">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        >
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
        android:name=".singlePlayer3"
        android:label="Single Player 3 X 3"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">

    </activity>
        <activity android:name=".multiPlayer3"
            android:label="Multi Player 3 X 3"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">

        </activity>

        <activity android:name=".singlePlayer5"
            android:label="Single Player 5 X 5"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">

        </activity>

        <activity android:name=".multiPlayer5"
            android:label="MultiPlayer 5 X 5"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden">

        </activity>
    </application>

</manifest>